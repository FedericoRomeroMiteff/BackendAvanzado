<h2>Productos en Tiempo Real</h2> 

<ul id="product-list">
    {{#each products}} 
        <li data-id="{{this.id}}">
            {{this.title}} - ${{this.price}} 
            <button onclick="deleteProduct({{this.id}})">Eliminar</button> 
            <button onclick="editProduct({{this.id}})">Modificar</button> 
        </li>
    {{/each}}
</ul>


<h2>Agregar Nuevo Producto</h2>
<form id="add-product-form">
    <input type="text" id="product-title" placeholder="Nombre del producto" required> 
    <input type="number" id="product-price" placeholder="Precio" step="0.01" required> 
    <button type="submit">Agregar Producto</button> 
</form>


<h2>Modificar Producto</h2>
<form id="edit-product-form">
    <input type="hidden" id="edit-product-id"> 
    <input type="text" id="edit-product-title" placeholder="Nuevo nombre del producto" required> 
    <input type="number" id="edit-product-price" placeholder="Nuevo precio" step="0.01" required> 
    <button type="submit">Modificar Producto</button> 
</form>
    <script src="../public/realtime.js"></script>
</body>
</html>
